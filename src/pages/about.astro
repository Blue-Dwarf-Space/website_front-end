<DefaultLayout title="About Blue Dwarf Space">
    <main>
        <h1><span class="text-gradient">About Blue Dwarf Space</span></h1>
<!-- suggested content to be later exported to file that feeds this sucker -->        
    <ul class="w-full steps">
        <li class="step step-error">What</li> 
        <li class="step step-success">Why</li> 
        <li class="step step-secondary">Problem</li> 
        <li class="step step-accent">Current workflow</li>
        <li class="step step-info">Solution</li>
    </ul>

    <div>
        <img src="../public/assets/current_workflow.svg" />
    </div>
    <div>
        <img src="../public/assets/new_workflow.svg" />
    </div>
